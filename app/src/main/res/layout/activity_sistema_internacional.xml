<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shirley.tupesoideal_final.SistemaInternacionalActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/healthyfood"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:orientation="horizontal"
            android:padding="24dp"
            android:rowCount="4"
            android:useDefaultMargins="true">


            <TextView
                android:layout_column="0"
                android:fontFamily="casual"
                android:textColor="#FFF"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:gravity="center_vertical"
                android:text="@string/height" />

            <EditText
                android:id="@+id/EditText_EstaturaInternacional"
                android:fontFamily="casual"
                android:textColor="#FFF"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:layout_width="189dp" />

            <TextView
                android:layout_column="2"
                android:layout_gravity="fill_vertical"
                android:fontFamily="casual"
                android:layout_row="1"
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Mts." />

            <TextView
                android:textColor="#FFF"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:fontFamily="casual"
                android:gravity="center_vertical"
                android:text="@string/mass" />

            <EditText
                android:id="@+id/EditText_MasaInternacional"
                android:textColor="#FFF"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:fontFamily="casual"
                android:gravity="center"
                android:layout_row="2"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_column="2"
                android:textColor="#FFF"
                android:layout_gravity="fill_vertical"
                android:layout_row="2"
                android:fontFamily="casual"
                android:gravity="center_vertical"
                android:text="Kg." />

        </GridLayout>

        <Button
            style="@style/GeneralFont"
            android:id="@+id/Calculate_ButtonInternacional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calculate"
            android:onClick="Calcular2onClick"

            />
    </LinearLayout>

</FrameLayout>
